{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },

    "brackets": [ [ "{", "}" ] ],
    "autoClosingPairs": [ {
        "open": "{",
        "close": "}",
        "notIn": [ "comment", "string" ]
    } ],

    "folding": {
        "markers": {
            "start": "{",
            "end": "}"
        }
    }
}
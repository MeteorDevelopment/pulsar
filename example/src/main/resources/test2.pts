// Theme
/* Theme */

@font "Comfortaa.ttf"

widget {
    spacing: 6
    radius: 2
}

text {
    color: 15 15 15
    font-size: 16
}

.right {
    align-x: right
}

window-header {
    background-color: 255 60 60,  255 100 100,  255 100 100,  255 60 60       // Double spaces just so its more readable
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

text .window-title {
    color: #FFFFFF
    align-x: right
    font-size: 22
    text-shadow: 15 15 15
}

window-body {
    background-color: #FFFFFF
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

button {
    background-color: 240 240 240
    outline-size: 1
    outline-color: 0 0 0
    padding: 4
    spacing: 4
    icon: click
}

button :hovered {
    background-color: 230 230 230
}

button :pressed {
    background-color: 220 220 220
}

icon .click {
    icon-path: "click.svg"
    color: 0 0 0
    size: 24
}

icon .click :hovered {
    color: 20 20 20
}

icon .click :pressed {
    color: 40 40 40
}

button-text {
    align-x: left
}

checkbox {
    outline-size: 2
    outline-color: 0 0 0
    padding: 4
    radius: 6
}

checkbox :hovered {
    background-color: 240 240 240
}

checkbox :pressed {
    background-color: 230 230 230
}

checkbox-inner {
    color: 0 0 0
    size: 14
    icon-path: "check.svg"
}

checkbox-inner :hovered {
    color: 20 20 20
}

checkbox-inner :pressed {
    color: 40 40 40
}

horizontal-list {
    spacing: 8
}

text-box {
    background-color: 240 240 240
    color: 15 15 15
    outline-size: 1
    outline-color: 0 0 0
    padding: 6
    icon: write
    spacing: 4
    minimum-size: 220 0
}

text-box-placeholder {
    color: 145 145 145
}

icon .write {
    icon-path: "write.svg"
    color: 0 0 0
    size: 16
}

selection {
    background-color: 45 125 245 100
    radius: 2
}

slider {
    padding: 0
    minimum-size: 220 0
}

.slider-left {
    background-color: 255 60 60
    outline-size: 2
    outline-color: 245 50 50
    size: 6
    radius: 3
}

.slider-right {
    background-color: 240 240 240
    outline-size: 2
    outline-color: 230 230 230
    size: 6
    radius: 3
}

slider-handle {
    background-color: 255 20 20
    outline-size: 2
    outline-color: 200 20 20
    size: 16
    radius: 8
}

slider-handle :hovered {
    background-color: 255 50 50
    outline-color: 200 40 40
}

slider-handle :pressed {
    background-color: 255 70 70
    outline-color: 200 60 60
}

// Dropdown

dropdown {
    background-color: 240 240 240
    outline-size: 1
    outline-color: 0 0 0
    padding: 4 6 4 6
    spacing: 6 4
    icon: down
    list-direction: reversed
}

icon .down {
    icon-path: "down.svg"
    size: 20
    color: 0 0 0
}

icon .down :hovered {
    color: 20 20 20
}

icon .down :pressed {
    color: 40 40 40
}

dropdown :hovered {
    background-color: 230 230 230
}

dropdown :pressed {
    background-color: 220 220 220
}

.dropdown-text {
    align-x: center
}

.dropdown-body {
    spacing: 0
    outline-size: 1
    outline-color: 0 0 0
}

.dropdown-value {
    background-color: 240 240 240
    padding: 4
}

.dropdown-value :hovered {
    background-color: 230 230 230
}

.dropdown-value :pressed {
    background-color: 220 220 220
}

.dropdown-value-text {
    align-x: center
}

// Int edit

int-edit {
    spacing: 4
}

text-box .int-edit {
    minimum-size: 100 0
}

button .int-edit {
    icon: none
    minimum-size: 28
}

button-text .int-edit {
    font-size: 20
    align-x: center
}

// Double edit

double-edit {
    spacing: 4
}

text-box .double-edit {
    minimum-size: 100 0
}

button .double-edit {
    icon: none
    minimum-size: 28
}

button-text .double-edit {
    font-size: 20
    align-x: center
}

// Separators

horizontal-separator {
    size: 1
    background-color: 210 210 210
}

horizontal-separator-text {
    color: 180 180 180
    align-x: center
}

// Theme
/* Theme */

widget {
    spacing: 4
    radius: 2
}

text {
    color: 15 15 15
    font-size: 16
}

.right {
    align-x: right
}

window-header {
    background-color: 255 60 60,  255 100 100,  255 100 100,  255 60 60       // Double spaces just so its more readable
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

.window-title {
    color: #FFFFFF
    align-x: right
    font-size: 22
    text-shadow: 15 15 15
}

.window-body {
    background-color: #FFFFFF
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

button {
    background-color: 230 230 230
    outline-size: 1
    outline-color: 0 0 0
    padding: 8
}

button :hovered {
    background-color: 220 220 220
}

button :pressed {
    background-color: 210 210 210
}

.button-text {
    align-x: left
}

checkbox {
    outline-size: 2
    outline-color: 0 0 0
    padding: 4
    radius: 11
}

checkbox :hovered {
    background-color: 240 240 240
}

checkbox :pressed {
    background-color: 230 230 230
}

checkbox-inner {
    background-color: 25 225 25
    size: 14
    radius: 7
}

checkbox-inner :hovered {
    background-color: 40 240 40
}

checkbox-inner :pressed {
    background-color: 55 255 55
}

horizontal-list {
    spacing: 8
}
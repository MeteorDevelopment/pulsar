// Theme
/* Theme */

@font "Comfortaa.ttf"

widget {
    spacing: 6
    radius: 2
}

text {
    color: 15 15 15
    font-size: 16
}

.right {
    align-x: right
}

window-header {
    background-color: 255 60 60,  255 100 100,  255 100 100,  255 60 60       // Double spaces just so its more readable
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

.window-title {
    color: #FFFFFF
    align-x: right
    font-size: 22
    text-shadow: 15 15 15
}

.window-body {
    background-color: #FFFFFF
    radius: 2
    outline-size: 2
    outline-color: 0 0 0
    padding: 8
}

button {
    background-color: 240 240 240
    outline-size: 1
    outline-color: 0 0 0
    padding: 4
    spacing: 4
    icon: click
}

button :hovered {
    background-color: 230 230 230
}

button :pressed {
    background-color: 220 220 220
}

// Needs selector rewrite
//icon .click {
.click {
    icon-path: "click.svg"
    color: 0 0 0
    size: 24
}

// Needs selector rewrite, again
/*icon .click :hovered {
    color: 20 20 20
}

icon .click :pressed {
    color: 40 40 40
}*/

.button-text {
    align-x: left
}

checkbox {
    outline-size: 2
    outline-color: 0 0 0
    padding: 4
    radius: 11
}

checkbox :hovered {
    background-color: 240 240 240
}

checkbox :pressed {
    background-color: 230 230 230
}

checkbox-inner {
    background-color: 25 225 25
    size: 14
    radius: 7
}

checkbox-inner :hovered {
    background-color: 40 240 40
}

checkbox-inner :pressed {
    background-color: 55 255 55
}

horizontal-list {
    spacing: 8
}

text-box {
    background-color: 240 240 240
    color: 15 15 15
    outline-size: 1
    outline-color: 0 0 0
    font-size: 16
    padding: 6
}

selection {
    background-color: 45 125 245 100
    radius: 2
}

slider {
    padding: 0
}

.slider-left {
    background-color: 255 60 60
    outline-size: 2
    outline-color: 245 50 50
    size: 6
    radius: 3
}

.slider-right {
    background-color: 240 240 240
    outline-size: 2
    outline-color: 230 230 230
    size: 6
    radius: 3
}

.slider-handle {
    background-color: 255 20 20
    outline-size: 2
    outline-color: 200 20 20
    size: 16
    radius: 8
}

dropdown {
    @apply outline

    background-color: !bg
    padding: 4 6 4 6
    spacing: 6 4
    icon: down
    list-direction: reversed
}

dropdown :hovered {
    background-color: !bg-hovered
}

dropdown :pressed {
    background-color: !bg-pressed
}

icon .down {
    icon-path: "icons/down.svg"
    size: 20
    color: 0 0 0
}

icon .down :hovered {
    color: 20 20 20
}

icon .down :pressed {
    color: 40 40 40
}

.dropdown-text {
    align-x: center
}

.dropdown-body {
    @apply outline
    
    spacing: 0
}

.dropdown-value {
    background-color: !bg
    padding: 4
}

.dropdown-value :hovered {
    background-color: !bg-hovered
}

.dropdown-value :pressed {
    background-color: !bg-pressed
}

.dropdown-value-text {
    align-x: center
}
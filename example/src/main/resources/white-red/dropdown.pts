dropdown {
    @apply outline;

    background-color: !bg;
    padding: 4px 6px 4px 6px;
    spacing: 6px 4px;
    icon: "down";
    list-direction: reversed;
}

dropdown :hovered {
    background-color: !bg-hovered;
}

dropdown :pressed {
    background-color: !bg-pressed;
}

icon .down {
    icon-path: "icons/down.svg";
    size: 20px;
    color: #000000;
}

icon .down :hovered {
    color: rgb(20, 20, 20);
}

icon .down :pressed {
    color: rgb(40, 40, 40);
}

.dropdown-text {
    align-x: center;
}

.dropdown-body {
    @apply outline;
    
    spacing: 0px;
}

.dropdown-value {
    background-color: !bg;
    padding: 4px;
}

.dropdown-value :hovered {
    background-color: !bg-hovered;
}

.dropdown-value :pressed {
    background-color: !bg-pressed;
}

.dropdown-value-text {
    align-x: center;
}
@var text: Color = rgb(15, 15, 15);

@var window-header: Color4 = rgb(255, 60, 60) rgb(255, 100, 100) rgb(255, 100, 100) rgb(255, 60, 60);
@var window-body: Color = #FFFFFF;

@var bg: Color = rgb(240, 240, 240);
@var bg-hovered: Color = rgb(230, 230, 230);
@var bg-pressed: Color = rgb(220, 220, 220);

@mixin window-outline {
    outline-size: 2px;
    outline-color: #000000;
}

@mixin outline {
    outline-size: 2px;
    outline-color: rgb(127, 127, 127);
}
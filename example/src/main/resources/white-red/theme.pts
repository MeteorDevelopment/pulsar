@title "White Red"
@authors "MineGame159", "Coper"

@font "Comfortaa.ttf"

@include "global.pts"
@include "slider.pts"
@include "dropdown.pts"
@include "edits.pts"

widget {
    spacing: 6
    radius: 2
}

text {
    color: !text
    font-size: 16
}

window {
    align-x: center
}

window-header {
    @apply window-outline

    background-color: !window-header
    radius: 2
    padding: 8
}

text .window-title {
    color: #FFFFFF
    align-x: right
    font-size: 22
    text-shadow: 15 15 15
}

window-body {
    @apply window-outline

    background-color: !window-body
    radius: 2
    padding: 8
}

button {
    @apply outline
    
    background-color: !bg
    padding: 4
    spacing: 4
    icon: click
}

button :hovered {
    background-color: !bg-hovered
}

button :pressed {
    background-color: !bg-pressed
}

icon .click {
    icon-path: "icons/click.svg"
    color: 0 0 0
    size: 24
}

icon .click :hovered {
    color: 20 20 20
}

icon .click :pressed {
    color: 40 40 40
}

button-text {
    align-x: left
}

checkbox {
    @apply outline
    
    background-color: !bg
    padding: 4
    radius: 6
}

checkbox :hovered {
    background-color: !bg-hovered
}

checkbox :pressed {
    background-color: !bg-pressed
}

checkbox-inner {
    color: 0 0 0
    size: 14
    icon-path: "icons/check.svg"
}

checkbox-inner :hovered {
    color: 20 20 20
}

checkbox-inner :pressed {
    color: 40 40 40
}

horizontal-list {
    spacing: 8
}

text-box {
    @apply outline
    
    background-color: 240 240 240
    color: !text
    padding: 6
    icon: write
    spacing: 4
    minimum-size: 220 0
}

text-box-placeholder {
    color: 145 145 145
}

icon .write {
    icon-path: "icons/write.svg"
    color: 0 0 0
    size: 16
}

selection {
    background-color: 45 125 245 100
    radius: 2
}

// Separators

horizontal-separator {
    size: 1
    background-color: 210 210 210
}

horizontal-separator-text {
    color: 180 180 180
    align-x: center
}
